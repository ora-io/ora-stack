{
  "name": "ora-stack",
  "version": "0.2.0",
  "private": true,
  "packageManager": "pnpm@9.7.0",
  "description": "",
  "author": "Norman (nom4dv3), MuRong",
  "license": "MIT",
  "homepage": "https://github.com/ora-io/ora-stack#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ora-io/ora-stack.git"
  },
  "bugs": {
    "url": "https://github.com/ora-io/ora-stack/issues"
  },
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf packages/*/dist",
    "build": "esno scripts/build.ts",
    "build:rollup": "rollup --config=rollup.config.ts --configPlugin=rollup-plugin-esbuild --bundleConfigAsCjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "nr build",
    "publish": "nr prepublishOnly && esno scripts/publish.ts",
    "release": "esno scripts/release.ts",
    "start": "esno src/index.ts",
    "test": "DEBUG=ora-stack:* vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/ni": "^0.22.0",
    "@murongg/eslint-config": "^0.2.1",
    "@murongg/utils": "^0.1.27",
    "@ora-io/orap": "workspace:*",
    "@ora-io/reku": "workspace:*",
    "@ora-io/utils": "workspace:*",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.1.0",
    "bumpp": "^9.4.2",
    "consola": "^3.2.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.54.0",
    "esno": "^4.7.0",
    "ethers": "^6.13.2",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "lint-staged": "^15.2.8",
    "pnpm": "^9.7.0",
    "rimraf": "^5.0.10",
    "rollup": "^4.20.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.4",
    "unbuild": "^2.0.0",
    "vite": "^5.4.0",
    "vitest": "^2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
